generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum MediaType {
  IMAGE
  VIDEO
}

model User {
  id           String   @id @default(uuid())
  fullName     String
  email        String   @unique
  cpf          String   @unique
  phone        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  addresses    UserAddress[]
  productRates ProductRate[]
  carts        Cart[]

  @@map("user")
}

model UserAddress {
  id           Int     @id @default(autoincrement())
  zipCode      String
  street       String
  neighborhood String
  number       Int?
  complement   String?
  city         String
  state        String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  carts  Cart[]

  @@index([userId])
}

model ProductCategory {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String
  description String?
  products    Product[]

  @@unique([name, slug])
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String
  description String?

  categoryId Int
  category   ProductCategory  @relation(fields: [categoryId], references: [id])
  rates      ProductRate[]
  variants   ProductVariant[]
}

enum ProductVariantGender {
  MASCULINO
  FEMININO
  UNISSEX
}

enum ProductVariantSizeType {
  ALPHA
  NUMERICAL
  SINGLE
}

model ProductVariantMedia {
  id    Int       @id @default(autoincrement())
  type  MediaType
  url   String
  index Int

  productVariantId Int
  productVariant   ProductVariant @relation(fields: [productVariantId], references: [id])
}

model ProductVariant {
  id              Int                  @id @default(autoincrement())
  name            String
  gender          ProductVariantGender
  priceInCents    Int
  quantityInStock Int                  @default(0)
  productId       Int

  sizeType ProductVariantSizeType
  size     String

  product   Product               @relation(fields: [productId], references: [id])
  cartItems CartItem[]
  files     ProductVariantMedia[]
}

model ProductRate {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productVariantId Int
  product          Product @relation(fields: [productVariantId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Coupon {
  id              Int     @id @default(autoincrement())
  code            String  @unique
  description     String?
  maxUses         Int?
  usedCount       Int     @default(0)
  discountInCents Int

  expiresAt   DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  cartCoupons CartCoupon[]
}

model Cart {
  id     Int    @id @default(autoincrement())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  addressId Int?
  address   UserAddress? @relation(fields: [addressId], references: [id])

  items   CartItem[]
  coupons CartCoupon[]
}

model CartCoupon {
  id       Int @id @default(autoincrement())
  cartId   Int
  couponId Int

  cart   Cart   @relation(fields: [cartId], references: [id])
  coupon Coupon @relation(fields: [couponId], references: [id])
}

model CartItem {
  id               Int @id @default(autoincrement())
  productVariantId Int
  quantity         Int @default(1)
  cartId           Int

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
  cart           Cart           @relation(fields: [cartId], references: [id])
}
